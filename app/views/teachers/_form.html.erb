<%= form_for(@teacher) do |f| %>

  <%= render 'layouts/error_messages', object: @teacher %>

  <div class='field'>
    <%= f.label :name, 'Nombre' %><br>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :last_name, 'Apellido paterno' %><br>
    <%= f.text_field :last_name, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label :second_last_name, 'Apellido materno' %><br>
    <%= f.text_field :second_last_name, class:'form-control' %>
  </div>
  <div class='field'>
    <%= f.label 'Materias' %> <br>
    <% Course.all.each do |course| %>
      <%= check_box_tag 'courseTeachers[course_id][]', course.id %>
      <%= course.name %><br>
    <% end %>
  </div>
  <div class='field'>
    <%= f.label :picture, 'Imagen' %><br>
    <%= f.file_field :picture %>
  </div>
  <br>
  <button type='submit' class='btn btn-primary btn-sm'> Guardar </button>
<% end %>
