<h1>Materias</h1>
<% if @courses.count <= 0 %>
  No hay materias disponibles<br>
<% end %>
<% if @courses.count > 0 %>
<table class='table table-striped table-bordered table-hover'>
  <thead>
    <tr>
      <th width='50%'>Nombre</th>
      <th width='19%'>Carrera</th>
      <th width='15%'>Semestre</th>
      <th width='8%'></th>
      <th width='8%'></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to "#{course.name}", course_path(course.id) %></td>
        <td><%= course.major.name %></td>
        <td><%= course.semester %></td>
        <td><%= link_to 'Editar', edit_course_path(course) %></td>
        <td><%= link_to 'Eliminar', course, method: :delete, data: { confirm: 'Â¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
<button class='btn btn-primary btn-sm' type='button' onclick="window.location.href='<%= new_course_path %>'" > Nuevo </button>
