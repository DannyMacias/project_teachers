<h1>Carreras</h1>
<% if @majors.count <= 0 %> 
  No hay carreras 
<% end if %>
<table class='table table-striped table-bordered table-hover'>
  <% if @majors.count > 0 %>
  <thead>
  <tr>
    <th width='60%'> Nombre </th>
    <th width='10%'></th>
    <th width='10%'></th>
  </tr>
</thead>
  <% end if%> 
  <tbody>
    <% @majors.each do |major| %>
      <tr>
        <td width='90%'><%= link_to "#{major.name}", major %></td>
        <td width='5%'><%= link_to 'Editar', edit_major_path(major) %></td>
        <td width='5%'><%= link_to 'Eliminar', major, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class='btn btn-primary btn-sm'> <%= link_to 'Nuevo', new_major_path %> </div>
