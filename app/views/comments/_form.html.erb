<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class='field'>
    <%#= f.hidden_field :date_post %>
    <%#= f.hidden_field :user %>
  </div>
  <div class='field'>
    Fecha <%= f.date_select :date_post %><br>
    Usuario <%= f.collection_select :user_id, User.all, :id, :full_name, { prompt: true } %>
  </div>
  <div class='field'>
    <%= f.label :teacher_id, 'Profesor' %><br>
    <%= f.collection_select :teacher_id, Teacher.all, :id, :full_name, { prompt: true }, { class: 'form-control' } %>
  </div>
  <div class='field'>
    <%= f.label :course_id, 'Materia' %><br>
    <%= f.collection_select :course_id, Course.all, :id, :name, { prompt: true }, { class: 'form-control' } %>
  </div>
  <div class='field'>
    <%= f.label :content, 'Comentario' %><br>
    <%= f.text_area :content, class:'form-control', maxlength: '254', style: 'resize:none; width:450px; height:80px;' %>
  </div>
  <br>
  <button type='submit' class='btn btn-primary btn-sm'> Guardar </button>
<% end %>
