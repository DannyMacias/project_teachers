<h1>Comentarios</h1>
<% if @comments.count <= 0 %>
  No hay comentarios disponibles
<% end %>
<% if @comments.count > 0 %>
<table class='table table-striped table-bordered table-hover'>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Course</th>
      <th>User</th>
      <th>Date post</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
<% end %>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.teacher %></td>
        <td><%= comment.course %></td>
        <td><%= comment.user %></td>
        <td><%= comment.date_post %></td>
        <td><%= comment.content %></td>
        <td><%= link_to 'Mostrar', comment %></td>
        <td><%= link_to 'Editar', edit_comment_path(comment) %></td>
        <td><%= link_to 'Eliminar', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>
<div class='btn btn-primary btn-sm'><%= link_to 'Nuevo', new_comment_path %></div>
