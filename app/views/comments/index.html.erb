<h1>Comentarios</h1>
<% if @comments.count <= 0 %>
  <p class='text-danger'> No hay comentarios disponibles.</p>
<% else %>
<table class='table table-striped table-bordered table-hover'>
  <thead>
    <tr>
      <th width='21%'>Persona</th>
      <th width='21%'>Profesor</th>
      <th width='21%'>Materia</th>
      <th width='21%'>Fecha</th>
      <th width='8%'></th>
      <th width='8%'></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.order('updated_at').each do |comment| %>
      <tr>
        <td><%= comment.user.full_name %></td>
        <td><%= comment.teacher.full_name %></td>
        <td><%= comment.course.name %></td>
        <td><%= comment.date_post %></td>
        <td><%= link_to 'Editar', edit_comment_path(comment) %></td>
        <td><%= link_to 'Eliminar', comment, method: :delete, data: { confirm: 'Â¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
<button class='btn btn-primary btn-sm' type='button' onclick="window.location.href='<%= new_comment_path %>'" > Nuevo </button>