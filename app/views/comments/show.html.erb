<% if flash[:notice] %>
  <div class="alert alert-dismissable alert-success">
    <%= notice %>
  </div>
<% end %>

<div>
  <b>Fecha:</b>
  <%= @comment.date_post %>
</div>

<div>
  <strong>Profesor:</strong>
  <%= @comment.teacher.full_name %>
</div>

<div>
  <strong>Materia:</strong>
  <%= @comment.course.name %>
</div>

<div>
  <strong>Comentario:</strong><br>
  <% largo = @comment.content.length %>
  <% i = 0 %>
  <% j = 50 %>
  <% while i <= largo %>
    <%= @comment.content[i..j] %> <br>
    <% i = j+1 %>
    <% j = i+50 %>
  <% end %>
</div>
<br>
<%= link_to 'Editar', edit_comment_path(@comment) %> |
<%= link_to 'Volver', comments_path %>
